#!/bin/bash


cd ~
rm ~/.bashrc
cat .dotfiles/bash/bashrc/* >> ~/.bashrc

rm ~/.bash_it/aliases/custom.aliases.bash
cat .dotfiles/bash/aliases/* >> ~/.bash_it/aliases/custom.aliases.bash
cat .dotfiles/bash/aliases.windows/* >> ~/.bash_it/aliases/custom.aliases.bash

rm ~/.bash_it/custom/common.bash
cat .dotfiles/bash/custom/* >> ~/.bash_it/custom/common.bash
cat .dotfiles/bash/custom.windows/* >> ~/.bash_it/custom/common.bash

cp .dotfiles/bin/windows/powerline-shell_bash_windows.py ~/bin/powerline-shell_bash.py
