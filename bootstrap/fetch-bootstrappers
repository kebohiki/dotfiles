#!/bin/bash

curl -vsSL https://raw.githubusercontent.com/fisherman/install/master/install.fish > ~/.dotfiles/bootstrap/_bootstrap-fisherman.fish
curl -vsSL https://get.rvm.io > ~/.dotfiles/bootstrap/bootstrap-rvm
curl -vsSL https://static.rust-lang.org/rustup.sh > ~/.dotfiles/bootstrap/bootstrap-rust-with-cargo
curl -vsSL https://www.parse.com/downloads/cloud_code/installer.sh > ~/.dotfiles/bootstrap/bootstrap-parse
curl -vsSL https://nixos.org/nix/install > ~/.dotfiles/bootstrap/bootstrap-nix
curl -vsSL https://raw.githubusercontent.com/Shougo/dein.vim/master/bin/installer.sh > _bootstrap-dein.sh

chmod 755 ~/.dotfiles/bootstrap/bootstrap*
chmod 755 ~/.dotfiles/bootstrap/_bootstrap*.sh
